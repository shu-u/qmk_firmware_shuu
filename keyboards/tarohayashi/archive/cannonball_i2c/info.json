{
    "keyboard_name": "CannonballCURSORPAD",
    "manufacturer": "hayashi",
    "maintainer": "hayashi",
    "url": "https://github.com/Taro-Hayashi/Cannonball/blob/main/README.md",
    "usb": {
        "vid": "0xFEED",
        "pid": "0x0887",
        "device_version": "1.0.0"
    },
    "processor": "atmega32u4",
    "bootloader": "caterina",
    "features": {
        "extrakey": true,
        "rgblight": true,
        "midi": true,
        "oled": true,
    },
    "bootmagic": {
        "enabled": true,
        "matrix": [0,4]
    },
    "matrix_pins": {
        "cols": ["B6", "B2", "B3", "B1", "F7"],
        "rows": ["D4", "C6", "D7", "E6"]
    },
    "diode_direction": "ROW2COL",
    "encoder": {
        "enabled": true,
        "rotary": [
            { "pin_a": "D2", "pin_b": "B4", "resolution": 4},
            { "pin_a": "B5", "pin_b": "F4", "resolution": 4},
            { "pin_a": "F5", "pin_b": "F6", "resolution": 4}
        ]
    },
    "dynamic_keymap": {
        "layer_count": 6
    },
    "build": {
        "lto": true
    },
    "mouse_key": {
        "enabled": true
    },
    "tapping": {
        "hold_on_other_key_press": true
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                { "label": "1", "matrix": [0, 1], "x": 1, "y": 0 },
                { "label": "2", "matrix": [0, 2], "x": 2, "y": 0 },
                { "label": "3", "matrix": [0, 3], "x": 3, "y": 0 },
                { "label": "BACKSPACE", "matrix": [0, 4], "x": 4, "y": 0 },
                { "label": "PU1", "matrix": [1, 0], "x": 0, "y": 1 },
                { "label": "PU2", "matrix": [1, 1], "x": 1, "y": 1 },
                { "label": "UP", "matrix": [1, 2], "x": 2, "y": 1 },
                { "label": "PU3", "matrix": [1, 3], "x": 3, "y": 1 },
                { "label": "LEFT", "matrix": [2, 1], "x": 1, "y": 2 },
                { "label": "DOWN", "matrix": [2, 2], "x": 2, "y": 2 },
                { "label": "RIGHT", "matrix": [2, 3], "x": 3, "y": 2 },
                { "label": "ENTER", "matrix": [2, 4], "h": 2, "x": 4, "y": 2 },
                { "label": "L", "matrix": [3, 4], "x": 0, "y": 2 },
                { "label": "PU", "matrix": [3, 2], "x": 0, "y": 2 },
                { "label": "R", "matrix": [3, 0], "x": 0, "y": 2 }
            ]
        }
    },  
    "ws2812": {
        "pin": "D3"
    },
    "rgblight": {
        "led_count": 12,
        "animations": {
            "alternating": true,
            "breathing": true,
            "christmas": true,
            "knight": true,
            "rainbow_mood": true,
            "rainbow_swirl": true,
            "rgb_test": true,
            "snake": true,
            "static_gradient": true,
            "twinkle": true
        }
    }
}
